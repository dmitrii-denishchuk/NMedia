<resources>
    <!-- Base application theme. -->
    <style name="Theme.Nmedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppTheme.likeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_like_24</item>
        <item name="iconTint">@color/like_button_tint</item>
        <item name="android:textColor">@color/buttons_text_tint</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/avatar_view_size</item>
        <item name="android:minHeight">@dimen/avatar_view_size</item>
    </style>

    <style name="Widget.AppTheme.shareButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_share_24</item>
        <item name="iconTint">@color/other_buttons_tint</item>
        <item name="android:textColor">@color/buttons_text_tint</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/avatar_view_size</item>
        <item name="android:minHeight">@dimen/avatar_view_size</item>
    </style>

    <style name="Widget.AppTheme.views" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_views_24</item>
        <item name="iconTint">@color/other_buttons_tint</item>
        <item name="android:textColor">@color/buttons_text_tint</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/avatar_view_size</item>
        <item name="android:minHeight">@dimen/avatar_view_size</item>
    </style>

    <style name="Widget.AppTheme.menuButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_menu_24</item>
        <item name="iconTint">@color/other_buttons_tint</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">@dimen/avatar_view_size</item>
        <item name="android:minHeight">@dimen/avatar_view_size</item>
    </style>

    <style name="Widget.AppTheme.okButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="icon">@drawable/ic_baseline_close_24</item>
        <item name="backgroundTint">#FF0000</item>
    </style>

</resources>